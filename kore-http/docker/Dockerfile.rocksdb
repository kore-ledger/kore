 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*
RUN rustup target add x86_64-unknown-linux-gnu

# Argumento de construcci贸n para features
ARG FEATURES=""
ENV CARGO_FEATURES=$FEATURES

# Kore
COPY ./kore/kore-http/src ./kore/kore-http/src
